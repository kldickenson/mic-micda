{
  "name": "creative-wp-theme",
  "version": "1.0.0",
  "description": "WordPress starter theme for Michigan Creative.",
  "scripts": {
    "start": "npm-run-all --parallel watch:*",
    "build": "npm-run-all build:*",
    "build:css": "postcss css/main.css -o dist/style.css --env production",
    "build:js": "babel js/app.js --out-file dist/app.js",
    "watch:css": "postcss css/main.css -o dist/style.css -w --verbose",
    "watch:js": "babel js/app.js --out-file dist/app.js --watch",
    "watch:browser-sync": "browser-sync start --https --proxy 'https://micda.lndo.site' --no-inject-changes --no-open --files 'dist' '*.php'"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "autoprefixer": "^9.4.4",
    "browser-sync": "^2.26.3",
    "cssnano": "^4.1.8",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.5.0",
    "tailwindcss": "^1.1.0"
  },
  "dependencies": {}
}
